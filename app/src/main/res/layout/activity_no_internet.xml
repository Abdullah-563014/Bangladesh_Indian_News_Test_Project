<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/noInternetActivitySwipeRefreshLayout"
        android:layout_height="match_parent"
        tools:context=".ui.activities.no_internet.NoInternetActivity">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:text="OH!"
                    android:textSize="@dimen/_18ssp"
                    android:textStyle="bold"
                    android:textColor="#F54108"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Something is wrong"
                    android:textSize="@dimen/_14ssp"
                    android:textStyle="bold"
                    android:textColor="#F54108"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="Possible problem is â€“"
                    android:textSize="@dimen/_11ssp"
                    android:textStyle="bold"
                    android:textColor="#141414"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="1. Weak or No internet connection."
                    android:textSize="@dimen/_11ssp"
                    android:textColor="#141414"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="If problem is not solved, Please contact us with below email address or phone number by messaging."
                    android:textSize="@dimen/_10ssp"
                    android:textColor="#3F51B5"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="easysoft247@gmail.com"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="#141414"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:text="+8801303628419"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="#141414"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <LinearLayout
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp">
                    <Button
                        android:id="@+id/noInternetActivityCopyEmailButton"
                        style="@style/NoInternetButtonCustomStyle"
                        android:text="Copy Email"
                        android:background="@drawable/copy_button_background"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                    <Button
                        android:id="@+id/noInternetActivityCopyNumberButton"
                        style="@style/NoInternetButtonCustomStyle"
                        android:text="Copy Number"
                        android:background="@drawable/copy_button_background"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"/>
                </LinearLayout>
                <Button
                    android:id="@+id/noInternetActivityRefreshButton"
                    style="@style/NoInternetButtonCustomStyle"
                    android:text="Refresh"
                    android:background="@drawable/button_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"/>
                <Button
                    android:id="@+id/noInternetActivityCloseButton"
                    style="@style/NoInternetButtonCustomStyle"
                    android:text="close app"
                    android:background="@drawable/close_button_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"/>
                <Button
                    android:id="@+id/noInternetActivityBackButton"
                    style="@style/NoInternetButtonCustomStyle"
                    android:text="back"
                    android:background="@drawable/back_button_background"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_35sdp"/>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
</layout>