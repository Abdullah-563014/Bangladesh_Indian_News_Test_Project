<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/_10sdp"
        tools:context=".ui.activities.main.MainActivity">
        <TextView
            android:id="@+id/selectedCountryTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.35"
            android:text="Country:- Bangladesh"
            android:gravity="center"
            android:textSize="@dimen/_17ssp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/selectedLanguageTextView"
            app:layout_constraintTop_toBottomOf="@+id/selectedCountryTextView"
            android:text="Language:- Bangla"
            android:gravity="center"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/setCountryButton"
            app:layout_constraintTop_toBottomOf="@+id/selectedLanguageTextView"
            style="@style/ButtonCustomStyle"
            android:text="Set Country"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"/>
        <Button
            android:id="@+id/nextButton"
            app:layout_constraintTop_toBottomOf="@+id/setCountryButton"
            style="@style/ButtonCustomStyle"
            android:text="Next"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"/>
        <Button
            android:id="@+id/favouriteListButton"
            app:layout_constraintTop_toBottomOf="@+id/nextButton"
            style="@style/ButtonCustomStyle"
            android:text="Favourite List"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>